<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image_search_item_list"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/text_username_search_item_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/circle_image_search_item_list"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/text_fullname_search_item_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fullanme"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/circle_image_search_item_list"
                    android:layout_below="@id/text_username_search_item_list"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/button_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>